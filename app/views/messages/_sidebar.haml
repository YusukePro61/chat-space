.sidebar
  .sidebar__header
    .sidebar__header__username
      = current_user.name
    %ul.sidebar__header__right
      %li.sidebar__header__right__group
        = link_to new_group_path do
          = fa_icon "pencil-square-o", class: "icon"
      %li.sidebar__header__right__account
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "EDITlink" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message


